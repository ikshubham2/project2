<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart - Brainstorm Paradise</title>
    <!-- <link rel="stylesheet" href="/stylesheets/style.css" -->
    <style>
        /* style.css */

body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}

header {
    background-color: #333;
    color: #fff;
    padding: 1em;
    text-align: center;
}

.logo-container {
    display: flex;
    justify-content: center;
    align-items: center;
}

.logo-img {
    width: 50px;
    height: 50px;
    margin-right: 10px;
}

.logo-title {
    font-size: 24px;
    font-weight: bold;
}

nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: space-between;
}

nav li {
    margin-right: 20px;
}

nav a {
    color: #fff;
    text-decoration: none;
}

main {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2em;
}

.cart-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}

.cart-item {
    height: 200px;
    margin: 20px;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.book-cover {
    height: 200px;
    width: 100px;
    height: 100px;
    margin-bottom: 10px;
}

.cart-item-details {
    margin-bottom: 10px;
    height: 200px;
}

.cart-item-actions {
    text-align: center;
    height: 200px;
}

.quantity-controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.quantity-display {
    font-size: 18px;
    font-weight: bold;
    margin: 0 10px;
}

.btn {
    background-color: #333;
    color: #fff;
    border: none;
    padding: 10px 20px;
    font-size: 16px;
}
    </style>
</head>
<body>
    <header>
        <!-- <div class="logo-container">
            <img src="/images/brainstorm_logo.png" alt="Brainstorm Paradise Logo" class="logo-img">
            <h1 class="logo-title">Brainstorm Paradise</h1>
        </div> -->
        <!-- <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/books/all">Books</a></li>
                <li><a href="/auth/login">Login</a></li>
                <li><a href="/auth/signup">Sign Up</a></li> -->
            <!-- </ul>
        </nav> -->
    </header>

    <main class="container">
        <h2>Your Cart</h2>
        <div class="cart-container">
            <% cartItems.forEach(item => { %>
                <div class="cart-item">
                    <img src="/image/<%= item.image %>" alt="<%= item.name %>" class="product-image">
                    <div class="cart-item-details">
                        <h3><%= item.name %></h3>
                        <p>$<%= item.price %></p>
                    </div>
                    <div class="cart-item-actions">
                        <div class="quantity-controls">
                            <a href="/decrease/<%= item.cartid %>" class="btn btn-quantity">-</a>
                            <span class="quantity-display"><%= item.quantity %></span>
                            <a href="/increase/<%= item.cartid %>" class="btn btn-quantity">+</a>
                        </div>
                        <a href="/remove/<%= item.cartid %>" class="btn">Remove</a>
                    </div>
                </div>
            <% }) %>
        </div>
        <div class="checkout-summary">
            <h3>Order Summary</h3>
            <p>Total Price: $<%= totalPrice %></p>
            <a href="/checkout" class="btn">Proceed to Checkout</a>
        </div>
    </main>
    <a href="/" class="btn btn-home">Go to Home</a>
    <footer>
        <p>&copy; 2023 Muscle Blast</p>
    </footer>

    <script src="/javascripts/main.js"></script>
</body>
</html>